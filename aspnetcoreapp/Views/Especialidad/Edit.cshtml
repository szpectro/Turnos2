@model Turnos2.Models.Especialidad

<h4>Especialidad</h4>

<div class="row">
    <div>
       <form class="col s12" asp-action="Edit">
            <div asp-validation-summary="ModelOnly"></div>
            <input type="hidden" asp-for="IdEspecialidad"/>
            <div>
                <label asp-for="Descripcion"></label>
                <input asp-for="Descripcion" class="validate" type="text"/>
                <span asp-validation-for="Descripcion"></span>
            </div>
            <div class="row">
                        <div class="col s6 m6">
                            <button class="btn waves-effect waves-light cyan darken-light-1" type="submit" name="action">Grabar
                                <i class="material-icons right">send</i>
                            </button>                            
                        </div>  
                        <div class="col s6 m6">
                            <a class="waves-effect waves-light btn grey darken-4" asp-action="Index"><i class="material-icons left">undo</i>Volver</a>                           
                        </div>                      
            </div>            
        </form> 
    </div>
    
</div>
